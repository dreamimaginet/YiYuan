@using YiYuan.ViewModel
@model List<ProductListViewModel>
    @{
    ViewBag.Title = "列表";
    int i = 0;
    }
    @section styles{
    <link href="~/Content/ProductList.css" rel="stylesheet" />

    }
    <div class="g-wrap lazy-wrap">
        <div class="crumbNav"><a href="/" target="">首页</a> <i>></i> 十元专区</div>
        <article class="m-category g-list">
            @foreach (var item in Model)
            {
            <div class="product-con  @{ if (i % 4 == 0){ @(" end")}} ">
                <div class="m-product-detail ">
                    <div class="icon">
                        <img src="/Images/1468552858865_1.jpg" data-original="1468552858865_1.jpg" alt="" />
                    </div>
                    <div class="img">
                        <a href="/product/detail/@item.Id" target="_blank">
                            <img src="/Images/1474558797294_1.png" data-original="/Images/1468552858865_1.jpg" alt="" />
                        </a>
                        <div class="bg-placeholder"><i class="icon-base">&#xe600;</i></div>
                    </div>
                    <div class="content">
                        <h3 class="title"><a href="/product/detail/@item.Id" target="_blank">@item.Name</a></h3>
                        <div class="progress">
                            <p class="totalTimes">总需人次：@item.EndNumber</p>
                            <p class="progress-bar"><span class="bg " style="width:96.86%"></span> </p>
                            <span class="joinTimes"><mark>@item.ExistNumber</mark>已参与人次</span>
                            <span class="remainTimes"><mark>@(item.EndNumber - item.ExistNumber)</mark>剩余人次</span>
                        </div>
                        <div class="btns">
                            <div class="inumber" data-min="@item.Min" data-max="@item.EndNumber">
                                参与
                                <i class="reduce">-</i>
                                <input name="num" value="@item.Min" />
                                <i class="add">+</i>人次
                            </div>
                            <a href="javascript:;" class="buy" data-productid="2" data-periodid="167" data-mintimes="10" data-coinsPerTime="1" data-productname="千禧之星 100g金元宝">立即参与</a>
                        </div>
                    </div>
                </div>
                <div class="active-bg"></div>
            </div>

            i++;
            }


        </article>
    </div>
